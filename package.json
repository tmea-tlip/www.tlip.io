		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^5.1.1"
	},
	"type": "module",
	"dependencies": {
		"googleapis": "^133.0.0",
		"marked": "^12.0.0",
		"pino": "^8.18.0",
		"swiper": "^11.0.6",
		"url-metadata": "^3.4.9",
		"vite-plugin-markdown": "^2.2.0"
