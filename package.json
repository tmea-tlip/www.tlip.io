		"node": ">=14",
		"npm": ">=7"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json --diagnostic-sources js,svelte",
